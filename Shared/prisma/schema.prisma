generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}




enum Verdict {
  AC
  WA
  TLE
  MLE
  RE
  CE
}

enum Language {
  cpp
  java
  python
  javascript
  go
  rust
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}


model User {
  id           String   @id @default(cuid())
  username     String   @unique
  email        String   @unique
  passwordHash String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  submissions  Submission[]
  contests     ContestRegistration[]
  leaderboardSnapshots LeaderboardSnapshot[] 
}



model Problem {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  description String
  difficulty  Difficulty

  maxScore    Int        @default(100)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  testcases   Testcase[]
  submissions Submission[]
  contests    ContestProblem[]
}


model Testcase {
  id         String   @id @default(cuid())
  problemId String

  input      String
  output     String
  isSample   Boolean  @default(false)

  problem   Problem  @relation(fields: [problemId], references: [id])

  createdAt DateTime @default(now())
}



model Contest {
  id          String   @id @default(cuid())
  title       String
  description String

  startTime   DateTime
  endTime     DateTime
  isFrozen    Boolean  @default(false)

  createdAt   DateTime @default(now())

  problems    ContestProblem[]
  users       ContestRegistration[]
  submissions  Submission[]          
  leaderboardSnapshots LeaderboardSnapshot[] 
}


model ContestProblem {
  contestId String
  problemId String

  contest   Contest @relation(fields: [contestId], references: [id])
  problem   Problem @relation(fields: [problemId], references: [id])

  @@id([contestId, problemId])
}


model ContestRegistration {
  id        String   @id @default(cuid())
  contestId String
  userId    String

  registeredAt DateTime @default(now())

  contest Contest @relation(fields: [contestId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([contestId, userId])
}



model Submission {
  id          String   @id @default(cuid())
  userId      String
  problemId   String
  contestId   String?

  language    Language
  code        String

  verdict     Verdict
  score       Int      @default(0)

  timeTakenMs Int
  memoryUsedMb Int?

  passedTestcases Int
  totalTestcases  Int

  failedInput       String?
  failedExpected    String?
  failedOutput      String?
  errorMessage      String?

  createdAt DateTime @default(now())

  user     User    @relation(fields: [userId], references: [id])
  problem  Problem @relation(fields: [problemId], references: [id])
  contest  Contest? @relation(fields: [contestId], references: [id])

  @@index([userId, problemId])
  @@index([contestId])
}



model LeaderboardSnapshot {
  id        String   @id @default(cuid())
  contestId String
  userId    String

  score     Int
  rank      Int
  timeTakenMs Int

  capturedAt DateTime @default(now())

  contest Contest @relation(fields: [contestId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@index([contestId])
}